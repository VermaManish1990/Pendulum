<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_220sdp"
    android:background="@color/transparent"
    tools:context=".fragments.QuarterViewFragmentDialog">

    <FrameLayout
        android:id="@+id/fl_menu_view"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:background="@drawable/custom_quarter_circle_bg">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/menu_white"
            app:fabSize="mini" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rl_quarter_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_220sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="gone">

        <FrameLayout
            android:id="@+id/fl_quarter_black_view"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_190sdp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/custom_quarter_circle_bg" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_120sdp"
            android:src="@drawable/profile"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_140sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:padding="@dimen/_10sdp"
            android:textStyle="bold"
            android:rotation="40"
            android:textSize="@dimen/_25sdp"
            android:visibility="gone"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_28sdp"
            android:layout_marginTop="72dp"
            android:rotation="11"
            android:text="@string/mirror"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:visibility="visible" />

        <FrameLayout
            android:id="@+id/fl_mirror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:background="@drawable/custom_black_circle_bg"
            android:padding="@dimen/_15sdp">


            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:contentDescription="@string/image"
                android:src="@drawable/mirror" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_contest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="115dp"
            android:rotation="40"
            android:text="@string/contest"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:visibility="visible" />

        <FrameLayout
            android:id="@+id/fl_contest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_50sdp"
            android:background="@drawable/custom_black_circle_bg"
            android:padding="@dimen/_15sdp">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:contentDescription="@string/image"
                android:src="@drawable/contest" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:layout_marginStart="190dp"
            android:rotation="62"
            android:text="@string/area"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:visibility="visible" />


        <FrameLayout
            android:id="@+id/fl_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_185sdp"
            android:background="@drawable/custom_black_circle_bg"
            android:padding="@dimen/_15sdp">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:contentDescription="@string/image"
                android:src="@drawable/area" />
        </FrameLayout>

    </RelativeLayout>

</RelativeLayout>
