<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.pend.activity.home.HomeActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_data_not_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/data_not_available"
        android:textSize="@dimen/_15sdp"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/rl_quarter_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_220sdp"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <FrameLayout
            android:id="@+id/fl_quarter_black_view"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_190sdp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/custom_quarter_circle_bg" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:src="@drawable/profile"
            android:layout_marginTop="@dimen/_120sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_30sdp" />

        <FrameLayout
            android:id="@+id/fl_mirror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_30sdp"
            android:background="@drawable/custom_black_circle_bg"
            android:padding="@dimen/_15sdp">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:contentDescription="@string/image"
                android:src="@drawable/mirror" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_contest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_50sdp"
            android:background="@drawable/custom_black_circle_bg"
            android:padding="@dimen/_15sdp">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:contentDescription="@string/image"
                android:src="@drawable/contest" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_185sdp"
            android:layout_marginStart="@dimen/_185sdp"
            android:background="@drawable/custom_black_circle_bg"
            android:padding="@dimen/_15sdp">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:contentDescription="@string/image"
                android:src="@drawable/area" />
        </FrameLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_menu_view"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/custom_quarter_circle_bg">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/menu_white"
            app:fabSize="mini"/>
    </FrameLayout>

</RelativeLayout>
