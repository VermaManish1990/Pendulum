<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_demonetization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <TextView
            android:id="@+id/demonetization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/demonetization"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_share_on_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/custom_rounded_grey_border"
            android:padding="@dimen/_5sdp"
            android:text="@string/share_on_facebook"
            android:textColor="@color/colorGrayTextColor"
            android:textSize="@dimen/_10sdp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/custom_rounded_grey_border"
        android:padding="@dimen/_15sdp">

        <TextView
            android:id="@+id/tv_tap_here_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tap_here_to_vote"
            android:textColor="@color/colorGrayTextColor" />

        <TextView
            android:id="@+id/tv_admire_view"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tap_here_text"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/custom_rounded_green_view"
            android:gravity="center"
            android:padding="@dimen/_3sdp"
            android:text="40%"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_admire_view"
            android:layout_alignTop="@+id/tv_admire_view"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_toEndOf="@+id/tv_admire_view"
            android:layout_toRightOf="@+id/tv_admire_view"
            android:gravity="center"
            android:text="@string/admire"
            android:textColor="@color/colorGrayTextColor" />

        <TextView
            android:id="@+id/tv_hate_view"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_admire_view"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/custom_rounded_red_view"
            android:gravity="center"
            android:padding="@dimen/_3sdp"
            android:text="35%"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_hate_view"
            android:layout_alignTop="@+id/tv_hate_view"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_toEndOf="@+id/tv_hate_view"
            android:layout_toRightOf="@+id/tv_hate_view"
            android:gravity="center"
            android:text="@string/hate"
            android:textColor="@color/colorGrayTextColor" />

        <TextView
            android:id="@+id/tv_can_t_say_view"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_hate_view"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/custom_rounded_yellow_view"
            android:gravity="center"
            android:padding="@dimen/_3sdp"
            android:text="25%"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_can_t_say_view"
            android:layout_alignTop="@+id/tv_can_t_say_view"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_toEndOf="@+id/tv_can_t_say_view"
            android:layout_toRightOf="@+id/tv_can_t_say_view"
            android:gravity="center"
            android:text="@string/can_t_say"
            android:textColor="@color/colorGrayTextColor" />

    </RelativeLayout>

</LinearLayout>